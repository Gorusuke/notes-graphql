{
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "outDir": "build",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    // "noEmit": true,
    // "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "skipLibCheck": true
  },
}